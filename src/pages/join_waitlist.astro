---
import Layout from '../layouts/Layout.astro';


import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Join Waitlist - Punzisa">
    <Header />  
    <section class="waitlist-hero">
        <div class="container">
            <h1>Join the Waitlist</h1>
            <p class="lead-text">Be among the first to experience the future of education management in Zambia</p>
        </div>
    </section>

    <section class="waitlist-form">
        <div class="container">
            <div class="form-wrapper">
                <iframe 
                    src="https://docs.google.com/forms/d/e/1FAIpQLSdB7w7BklN3be4jp67CBvte21nH8VzTSlIbeXADo99TYx09Jw/viewform?embedded=true" 
                    width="640" 
                    height="1000" 
                   >
                    Loadingâ€¦
                </iframe>
            </div>
        </div>
    </section>
    <Footer />
</Layout>


<style lang="scss">
    .waitlist-hero {
        background-color: var(--brief);
        padding: 80px 0 40px;
        text-align: center;

        h1 {
            font-size: 3.6rem;
            margin-bottom: 1rem;
            color: #333;
        }

        .lead-text {
            font-size: 1.8rem;
            color: #666;
            max-width: 600px;
            margin: 0 auto;
        }
    }

    .waitlist-form {
        padding: 60px 0;
        
        .form-wrapper {
            max-width: 640px;
            margin: 0 auto;
            display: flex;
            justify-content: center;
        }
    }

    // Responsive adjustments
    @media (max-width: 700px) {
        .waitlist-hero {
            padding: 60px 0 30px;

            h1 {
                font-size: 2.8rem;
            }

            .lead-text {
                font-size: 1.6rem;
            }
        }

        .waitlist-form {
            padding: 30px 15px;

            .form-wrapper iframe {
                width: 100%;
            }
        }
    }
</style>
