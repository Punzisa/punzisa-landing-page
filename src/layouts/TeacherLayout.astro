---
import Layout from './Layout.astro';
import Sidebar from '../components/Sidebar.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title} hideHeader>
  <div class="d-flex">
    <Sidebar />
    <main class="flex-grow-1 p-4">
      <slot />
    </main>
  </div>
</Layout>
